<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".recipeDetailActivity">

  <ImageView
    android:id="@+id/dishImage"
    android:layout_width="221dp"
    android:layout_height="146dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toTopOf="@+id/owner"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:srcCompat="@tools:sample/avatars" />

  <TextView
    android:id="@+id/owner"
    android:layout_width="wrap_content"
    android:layout_height="26dp"
    android:layout_marginStart="8dp"
    android:text="Owner Name"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout_editor_absoluteY="172dp" />

  <TextView
    android:id="@+id/ingrident"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:text="Ingrident"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/owner" />

  <ExpandableListView
    android:id="@+id/ingridentList"
    android:layout_width="395dp"
    android:layout_height="89dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/ingrident" />

  <TextView
    android:id="@+id/step"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="8dp"
    android:text="Step"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/ingridentList" />

  <ExpandableListView
    android:id="@+id/stepList"
    android:layout_width="387dp"
    android:layout_height="237dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/step" />

  <Button
    android:id="@+id/like"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/ic_heart"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/stepList" />

  <TextView
    android:id="@+id/numberLike"
    android:layout_width="62dp"
    android:layout_height="35dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="28dp"
    android:layout_marginBottom="8dp"
    android:text="3.1K"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/like"
    app:layout_constraintTop_toBottomOf="@+id/stepList"
    app:layout_constraintVertical_bias="0.536" />

  <Button
    android:id="@+id/share"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/ic_share"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/numberLike"
    app:layout_constraintHorizontal_bias="0.057"
    app:layout_constraintStart_toEndOf="@+id/shareTextView"
    app:layout_constraintTop_toBottomOf="@+id/stepList"
    app:layout_constraintVertical_bias="0.505" />

  <TextView
    android:id="@+id/shareTextView"
    android:layout_width="62dp"
    android:layout_height="35dp"
    android:layout_marginStart="24dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:text="share"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/stepList" />

  <android.support.constraint.Guideline
    android:id="@+id/guideline4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="20dp" />

  <android.support.constraint.Guideline
    android:id="@+id/guideline5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_begin="20dp" />

</android.support.constraint.ConstraintLayout>
